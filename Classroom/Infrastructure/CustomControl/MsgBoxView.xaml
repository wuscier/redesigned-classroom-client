<local:BaseWindow x:Class="Classroom.MsgBoxView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:Classroom"
                  mc:Ignorable="d"
                  Title="MsgBox" 
                  IsSubWindow="True"
                  Height="60" 
                  Width="600"
                  FontFamily="Microsoft Yahei"
                  >
        <Border BorderBrush="{Binding MsgBorderBrush}" BorderThickness="2" Height="60">
        <StackPanel Orientation="Horizontal" Background="{Binding MsgBackgroundBrush}">
                <Image Source="{Binding MsgImage}" Margin="20 0 0 0" Height="38" Width="36" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
                <TextBlock Text="{Binding Msg}" FontSize="22" Foreground="#333" VerticalAlignment="Center" Margin="20 0 0 0"></TextBlock>
            </StackPanel>
        </Border>
</local:BaseWindow>
